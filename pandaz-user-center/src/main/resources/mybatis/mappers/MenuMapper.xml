    <select id="getAllAsTree" resultMap="CascadeResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        <where>
            deleted_flag = '0'
            <if test="parentCode != null and parentCode !=''">
                and parent_code=#{parentCode,jdbcType=VARCHAR}
            </if>
            <if test="osCode != null and osCode !=''">
                and os_code=#{osCode,jdbcType=VARCHAR}
            </if>
        </where>
        order by sorting, created_date
    </select>
    <select id="selectByParentCode" resultMap="CascadeResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        where deleted_flag = '0' and parent_code = #{parentCode,jdbcType=VARCHAR}
        order by sorting, created_date
    </select>
    <!-- 逻辑删除 -->
    <update id="logicDelete">
        update t_sys_menu
        <set>
            <if test="deletedBy != null">
                deleted_by = #{deletedBy,jdbcType=VARCHAR},
            </if>
            <if test="deletedDate != null">
                deleted_date = #{deletedDate,jdbcType=TIMESTAMP},
            </if>
            deleted_flag = id
        </set>
        <where>
            deleted_flag='0'
            <choose>
                <when test="code != null and code != ''">
                    and code = #{code,jdbcType=VARCHAR}
                </when>
                <otherwise>
                    and 1 = 2
                </otherwise>
            </choose>
        </where>
    </update>
    <!-- 批量逻辑删除 -->
    <update id="batchLogicDelete" parameterType="java.util.HashMap">
        update t_sys_menu
        <set>
            <if test="deletedBy != null">
                deleted_by = #{deletedBy,jdbcType=VARCHAR},
            </if>
            <if test="deletedDate != null">
                deleted_date = #{deletedDate,jdbcType=TIMESTAMP},
            </if>
            deleted_flag = id
        </set>
        <where>
            deleted_flag='0'
            <choose>
                <when test="list != null and list.size() > 0">
                    and code in
                    <foreach collection="list" open="(" close=")" index="index" item="item" separator=",">
                        #{item,jdbcType=VARCHAR}
                    </foreach>
                </when>
                <otherwise>
                    and 1 = 2
                </otherwise>
            </choose>
        </where>
    </update>
    <!--获取没有父级的菜单编码-->
    <select id="listMenusWithoutParent" resultType="java.lang.String">
        select child.code
        from t_sys_menu child
        where child.parent_code not in (
            select parent.code from t_sys_menu parent where parent.deleted_flag = '0'
        )
          and child.deleted_flag = '0'
          and child.parent_code != 'root'
    </select>
    <select id="getAuthorizedMenu" resultType="com.pandaz.usercenter.entity.MenuEntity"
            parameterType="java.util.HashMap">
        select tsrp.menu_code,
        tsm.name as menu_name,
        tsm.url as url,
        tsm.router as router,
        tsrp.permission_code,
        tsp.bit_digit,
        tsp.bit_result
        FROM t_sys_role_permission tsrp
        inner join t_sys_permission tsp on tsrp.permission_code = tsp.code
        and tsp.deleted_flag = '0'
        inner join t_sys_menu tsm on tsrp.menu_code = tsm.code and tsm.deleted_flag = '0'
        <where>
            tsrp.deleted_flag = '0'
            <choose>
                <when test="list != null and list.size >0 ">
                    and tsrp.role_code in
                    <foreach collection="list" index="index" item="item" separator="," open="(" close=")">
                        #{item,jdbcType=VARCHAR}
                    </foreach>
                    <if test="osCode != null and osCode != ''">
                        and tsrp.os_code = #{osCode,jdbcType=VARCHAR}
                    </if>
                </when>
                <otherwise>
                    and 1 = 2
                </otherwise>
            </choose>
        </where>
    </select>
